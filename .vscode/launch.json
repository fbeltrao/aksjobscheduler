    "version": "0.2.0",
    "configurations": [      
        {
            "name": "Launch .NET Worker",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_dotnet_worker",
            "program": "${workspaceFolder}/workers/dotnet/bin/Debug/netcoreapp2.1/Worker.dll",
            "args": [],
            "env": {
                "STORAGECONTAINER": "jobs",
                "BLOBPREFIX": "",
                "STORAGECONNECTIONSTRING": "",
                "LINESPERJOB": "5",
            },
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch Cmd Worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": [
                "-parallelism",
                "3",
                "-completions",
                "10"
            ]
        },
        {
            "name": "Launch Go Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/server/main.go",
            "envFile": "${workspaceFolder}/server.env"
        }
    ]
}